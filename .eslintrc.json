{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./backend/tsconfig.json", "./extension/tsconfig.json"]
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.ts",
          "**/*.test.tsx",
          "**/*.spec.ts",
          "**/*.spec.tsx",
          "**/vite.config.ts",
          "**/vitest.config.ts"
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "node_modules/",
    "*.js"
  ]
} 